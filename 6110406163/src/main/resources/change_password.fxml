<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #FFCCFF;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ChangePasswordController">
   <children>
      <Button fx:id="back" layoutX="10.0" layoutY="555.0" mnemonicParsing="false" onAction="#handleToBack" style="-fx-background-color: ff33ff;" text="Back" textFill="WHITE">
         <font>
            <Font name="Cambria" size="18.0" />
         </font>
      </Button>
      <Label layoutX="50.0" layoutY="85.0" text="Change Password">
         <font>
            <Font name="Arial Black" size="72.0" />
         </font>
      </Label>
      <Label layoutX="180.0" layoutY="260.0" text="Your username :">
         <font>
            <Font name="Cambria" size="24.0" />
         </font>
      </Label>
      <Label layoutX="180.0" layoutY="320.0" text="New password :">
         <font>
            <Font name="Cambria" size="24.0" />
         </font>
      </Label>
      <Label layoutX="180.0" layoutY="380.0" text="Confirm new password :">
         <font>
            <Font name="Cambria" size="24.0" />
         </font>
      </Label>
      <TextField fx:id="username" layoutX="445.0" layoutY="260.0" />
      <PasswordField fx:id="newPassword" layoutX="445.0" layoutY="320.0" />
      <PasswordField fx:id="confirmNewPassword" layoutX="445.0" layoutY="380.0" />
      <Label fx:id="error" alignment="CENTER" contentDisplay="CENTER" layoutX="175.0" layoutY="500.0" prefHeight="30.0" prefWidth="490.0" text="error" textAlignment="CENTER" textFill="#b51515">
         <font>
            <Font name="Cambria" size="24.0" />
         </font>
      </Label>
      <Button layoutX="360.0" layoutY="440.0" mnemonicParsing="false" onAction="#handleToConfirmNewPassword" style="-fx-background-color: ff66ee;" text="Confirm" textFill="WHITE">
         <font>
            <Font name="Cambria" size="24.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
